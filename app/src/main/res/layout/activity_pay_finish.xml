<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy150dp"
        android:layout_marginTop="@dimen/xy50dp"
        android:layout_marginRight="@dimen/xy30dp"
        android:layout_marginLeft="@dimen/xy30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_balance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xy30sp"
            android:textColor="@color/black"
            android:text="余 额"/>
        <TextView
            android:id="@+id/tv_pay_finish_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xy45sp"
            android:padding="@dimen/xy30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xy30sp"
            android:textColor="@color/black"
            android:text="@string/yuan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay_finish_continue"
        android:layout_width="@dimen/xy160dp"
        android:layout_height="@dimen/xy60dp"
        android:layout_marginTop="@dimen/xy40dp"
        android:textColor="@color/red"
        android:text="继续购票"
        android:textSize="@dimen/xy30sp"
        android:background="@drawable/pay_detail"
        android:gravity="center"
        android:padding="@dimen/xy10dp"/>

    <TextView
        android:id="@+id/tv_pay_finish_print"
        android:layout_width="@dimen/xy160dp"
        android:layout_height="@dimen/xy60dp"
        android:layout_marginTop="@dimen/xy40dp"
        android:text="打印余额票"
        android:textSize="@dimen/xy25sp"
        android:background="@drawable/pay_detail"
        android:textColor="@color/red"
        android:gravity="center"
        android:padding="@dimen/xy10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/xy80dp"
        android:textSize="@dimen/xy15sp"
        android:textColor="@color/finish_text_color"
        android:text="本次购票余额，请选择你所需要的服务"/>

    <TextView
        android:id="@+id/tv_pay_finish_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xy20dp"
        android:gravity="center"
        android:textSize="@dimen/xy10sp"
        android:text="广州市亿儿美技有限公司"/>

</LinearLayout>