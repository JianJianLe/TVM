<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/xy60dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_bill_setting_template_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:text="票据编号"/>
    <TextView
        android:id="@+id/tv_item_bill_setting_ticket_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="6"
        android:text="票据名称"/>
    <Button
        android:id="@+id/btn_item_bill_setting_detail"
        android:layout_width="0dp"
        android:layout_height="@dimen/xy40dp"
        android:layout_marginRight="@dimen/xy5dp"
        android:text="详情"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/btn_item_bill_setting_delete"
        android:layout_width="0dp"
        android:layout_height="@dimen/xy40dp"
        android:layout_marginRight="@dimen/xy5dp"
        android:text="删除"
        android:layout_weight="2"/>
</LinearLayout>