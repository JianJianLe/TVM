<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xy20dp"
            android:text="TVM"
            android:textColor="@color/black"
            android:textSize="@dimen/xy30dp"
            tools:text="TVM" />

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xy20dp"
            android:layout_marginRight="@dimen/xy20dp"
            android:drawablePadding="@dimen/xy10dp"
            android:gravity="center_vertical"
            android:hint="用户名"
            android:cursorVisible="true"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="@dimen/xy18dp" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xy20dp"
            android:layout_marginRight="@dimen/xy20dp"
            android:drawablePadding="@dimen/xy10dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:cursorVisible="true"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="@dimen/xy18dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xy10dp"
            android:layout_marginRight="@dimen/xy10dp"
            android:orientation="horizontal" >
        </RelativeLayout>

        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/xy40dp"
            android:layout_margin="@dimen/xy20dp"
            android:text="登录"
            android:textStyle="bold"
            android:textSize="@dimen/xy16sp" />

    </LinearLayout>

</LinearLayout>