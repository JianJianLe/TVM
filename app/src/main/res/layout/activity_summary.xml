<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy40dp"
        android:background="@color/light_gray"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_count_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/xy10dp"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/left_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/summary"
            android:textColor="@color/black"
            android:textSize="@dimen/xy18sp" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy100dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fLayouMemberMessage"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="纸钞总额："
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_bill_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="@dimen/xy15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text=" 微信总额："
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_wechat_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="@dimen/xy15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="支付宝总额："
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_summary_alipay_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:inputType="number"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy10dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="总额："
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_bill_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy10dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />
    <Button
        android:id="@+id/print_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xy40dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginBottom="@dimen/xy8dp"
        android:layout_marginLeft="@dimen/xy20dp"
        android:layout_marginRight="@dimen/xy20dp"
        android:layout_marginTop="@dimen/xy30dp"
        android:background="@drawable/confirm_dialog_back"
        android:gravity="center"
        android:text="打印"
        android:textColor="#ffffff"
        android:textSize="@dimen/xy16sp" />

    <Button
        android:id="@+id/quit_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xy40dp"
        android:layout_below="@+id/center_changepwd_btn"
        android:layout_marginBottom="@dimen/xy8dp"
        android:layout_marginLeft="@dimen/xy20dp"
        android:layout_marginRight="@dimen/xy20dp"
        android:layout_marginTop="@dimen/xy5dp"
        android:background="@drawable/confirm_dialog_back"
        android:gravity="center"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="@dimen/xy16sp" />
</LinearLayout>