<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_ticket_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ticket"
        android:padding="@dimen/xy5dp"
        />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/xy2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成人票"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="："/>
        <TextView
            android:id="@+id/tv_item_ticket_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_item_ticket_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xy5dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="男女不限"/>

</LinearLayout>