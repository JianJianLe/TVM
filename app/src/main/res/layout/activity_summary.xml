<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy40dp"
        android:background="@color/light_gray"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_summary_back"
            android:layout_width="@dimen/xy30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/xy10dp"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/left_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/summary"
            android:textColor="@color/black"
            android:textSize="@dimen/xy18sp" />
        <TextView
            android:id="@+id/tv_summary_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/print"
            android:paddingRight="@dimen/xy20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/xy18sp" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy30dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/cash_amount"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_cash_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xy5dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/cash_count"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_cash_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy10dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"

        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/online_pay_amount"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_onlinepay_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xy5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/online_pay_count"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_onlinepay_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy10dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/bill_summary"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_bill_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/xy5dp"
            android:gravity="right"
            android:text="@string/count_summary"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_summary_count_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/xy10dp"
            android:text="0"
            android:textSize="@dimen/xy14sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xy1dp"
        android:layout_marginTop="@dimen/xy10dp"
        android:layout_marginBottom="@dimen/xy10dp"
        android:layout_marginLeft="@dimen/xy10dp"
        android:layout_marginRight="@dimen/xy10dp"
        android:background="@drawable/wear_1" />

</LinearLayout>